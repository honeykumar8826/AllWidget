<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="CounterText" parent="TextAppearance.Design.Counter">
        <item name="android:textColor" >#00A572</item>

    </style>
    <style name="CounterOverflow" parent="TextAppearance.Design.Counter.Overflow">

        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>
    <style name="HintText" parent="TextAppearance.Design.Hint">
        <item name="android:textColorHint" >#00A572</item>
        <item name="android:textColor">#00A572</item>

    </style>
    <style name="ErrorStyle" parent="TextAppearance.Design.Error">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/colorPrimary</item>
    </style>


</resources>
